@model CreateDepartmentDto

@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService


<div class="container">
    <h1 class="mt-5">Add New Department</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddDepartment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <br />
                    <label asp-for="Name" class="control-label">Department Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <br />
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="DepartmentList" class="btn btn-outline-warning">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



    

 
