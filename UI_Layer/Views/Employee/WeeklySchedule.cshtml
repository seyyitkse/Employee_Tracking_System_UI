
@{
    ViewData["Title"] = "WeeklySchedule";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work Day Scheduler</title>
    <link rel="stylesheet" href="/Project_Files/css/schedulecss.css">
</head>
<body>
    <header>
        <h1>Work Day Scheduler</h1>
        <p>A simple calendar app for scheduling your work day</p>
        <p id="currentDay"></p>
    </header>
    <div class="schedule">
        <table>
            <thead>
                <tr>
                    <th>Time</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                    <th>Sunday</th>
                </tr>
            </thead>
            <tbody id="scheduleBody">
                <!-- Schedule rows will be added here dynamically -->
            </tbody>
        </table>
    </div>

    <script src="/Project_Files/js/scriptschedule.js"></script>
</body>
</html>

