@model UI_Layer.Dtos.EmployeeDto.ChangePasswordDto

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/EmployeeLayout/EmployeeLayout.cshtml";
}

<h2>Change Password</h2>

<div id="notificationMessage" class="alert" style="display:none;"></div>

<form id="changePasswordForm">
    <div class="form-group">
        <label for="CurrentPassword">Current Password</label>
        <input id="CurrentPassword" class="form-control" type="password" asp-for="CurrentPassword" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input id="NewPassword" class="form-control" type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#changePasswordForm').on('submit', function (e) {
                e.preventDefault();

                var token = document.cookie.split('; ').find(row => row.startsWith('AuthenticationToken=')).split('=')[1];
                if (!token) {
                    alert('Token not found in cookies.');
                    return;
                }

                // Parse the JWT token
                var jwtToken = JSON.parse(atob(token.split('.')[1]));

                // Get the user's email from the token
                var email = jwtToken.Email;

                var formData = {
                    Email: email,
                    CurrentPassword: $('#CurrentPassword').val(),
                    NewPassword: $('#NewPassword').val()
                };

                $.ajax({
                    url: 'http://localhost:27312/api/Auth/ChangePassword', // API URL
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    data: JSON.stringify(formData),
                    success: function (response) {
                        $('#notificationMessage').removeClass('alert-danger').addClass('alert-success')
                            .html('Password changed successfully.<br>Your new password is: ' + formData.NewPassword).show();
                        $('#changePasswordForm')[0].reset();
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = xhr.responseJSON ? xhr.responseJSON : 'Current password is incorrect.';
                        $('#notificationMessage').removeClass('alert-success').addClass('alert-danger').text(errorMessage).show();
                    }
                });
            });
        });
    </script>
}

